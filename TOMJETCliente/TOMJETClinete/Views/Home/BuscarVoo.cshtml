
@{
    ViewBag.Title = "BuscarVoo";
}

<h2>Buscar Voo</h2>

@using (Html.BeginForm("MostrarVoo", "Home", FormMethod.Post))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="text" id="data" name="data" placeholder="Data..." />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="text" id="origem" name="origem" placeholder="Origem..." />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="text" id="destino" name="destino" placeholder="Destino..." />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Procurar" class="btn btn-default" />
        </div>
    </div>
}

